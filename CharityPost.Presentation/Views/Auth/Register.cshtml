@model RegisterObject

@{
    ViewBag.Title = "Register";
}

<div class="form-container">

    <a asp-controller="Auth" asp-action="Login" class="link-hover">Already registered? Sign in.</a>
    <h2 class="text-large">Register</h2>

    <div class="auth__box">

        <form asp-controller="Auth" asp-action="Register" method="post">

            <label asp-for="FirstName" class="form-label pt">First name</label>
            <input asp-for="FirstName" class="form-input" />
            <span asp-validation-for="FirstName" class="text-red"></span>

            <label asp-for="LastName" class="form-label pt">Last name</label>
            <input asp-for="LastName" class="form-input form-textarea" />
            <span asp-validation-for="LastName" class="text-red"></span>

            <label asp-for="UserName" class="form-label pt">Username</label>
            <input asp-for="UserName" class="form-input form-textarea" />
            <span asp-validation-for="UserName" class="text-red"></span>

            <label asp-for="Email" class="form-label pt">Email</label>
            <input asp-for="Email" class="form-input form-textarea" />
            <span asp-validation-for="Email" class="text-red"></span>

            <label asp-for="PhoneNumber" class="form-label pt">Phone number</label>
            <input asp-for="PhoneNumber" class="form-input form-textarea" />
            <span asp-validation-for="PhoneNumber" class="text-red"></span>

            <label asp-for="Password" class="form-label pt">Password</label>
            <input asp-for="Password" class="form-input form-textarea" />
            <span asp-validation-for="Password" class="text-red"></span>

            <label asp-for="ConfirmPassword" class="form-label pt">Confirm password</label>
            <input asp-for="ConfirmPassword" class="form-input form-textarea" />
            <span asp-validation-for="ConfirmPassword" class="text-red"></span>

            <div class="main__content__article__button">
                <button class="button-background-blue" type="submit">Register</button>
            </div>

            <div asp-validation-summary="All" class="text-red"></div>

        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ClientSideValidationScriptsPartial"></partial>
}